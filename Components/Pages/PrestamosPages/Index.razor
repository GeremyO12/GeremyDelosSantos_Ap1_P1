@page "/"
@page "/Prestamos/Index/"
@page "/Prestamos/Index/{PrestamosId:int}"
@inject PrestamosServices prestamosServices
@rendermode InteractiveServer


<EditForm Model="ListaPrestamos" class="border shadow-lg p-3 rounded">
    <div class="card-header bg-primary text-white text-center py-2 rounded">
        <h3 style="font-weight: bold;" class="mb-0">Consulta</h3>
    </div>
    <div class="card-body">
        <div class="row mb-3 align-items-end">
            <div class="col-md-3">
                <label for="Filtro" class="form-label">Filtrar por:</label>
                <select @bind="filtro" class="form-select">
                    <option value="id">ID</option>
                    <option value="deudor">Deudor</option>
                    <option value="concepto">Concepto</option>
                    <option value="monto">Monto</option>
                </select>
            </div>

            <div class="col-md-6">
                <label for="ValorFiltro" class="form-label">Búsqueda:</label>
                <div class="input-group">
                    <input @bind="valorFiltro" class="form-control" placeholder="Buscar" />
                    <button @onclick="Buscar" class="btn btn-outline-primary" type="button">
                        <span class="bi bi-search"></span> Buscar
                    </button>
                </div>
            </div>

            <div class="col-md-3 text-end">
                <a href="/Prestamos/Create" class="btn btn-success" type="button">
                    <span class="bi bi-floppy"></span> Crear
                </a>
            </div>
        </div>
    </div>

    <table class="table table-bordered text-center">
        <thead class="bg-primary text-white">
            <tr>
                <th>Id</th>
                <th>Deudor</th>
                <th>Concepto</th>
                <th>Monto</th>
                <th>Ver</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prestamo in ListaPrestamos)
            {
                <tr>
                    <td>@prestamo.PrestamosId</td>
                    <td>@prestamo.Deudor</td>
                    <td>@prestamo.Concepto</td>
                    <td>@prestamo.Monto</td>

                    <td>
                        <a href="/Prestamos/Details/@prestamo.PrestamosId" class="btn-detalle" style="border: none; background-color: transparent;">
                            <span class="bi bi-info-circle-fill" style="font-size: 2rem;"></span>
                        </a>
                    </td>
                    <td>
                        <a href="/Prestamos/Edit/@prestamo.PrestamosId" class="btn-editar" style="border: none; background-color: transparent;">
                            <span class="bi bi-marker-tip" style="font-size: 2rem;"></span>
                        </a>
                    </td>
                    <td>
                        <a href="/Prestamos/Delete/@prestamo.PrestamosId" class="btn-eliminar" style="border: none; background-color: transparent;">
                            <span class="bi bi-trash" style="font-size: 2rem;"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</EditForm>

@code {
    [Parameter]
    public int PrestasmosId { get; set; }
    public List<Prestamos> ListaPrestamos = new List<Prestamos>();
    private string valorFiltro = "";
    private string filtro = "Id";

    protected override void OnInitialized()
    {
        ListaPrestamos = prestamosServices.Listar(c => true);
    }
    public void Buscar()
    {
        if (valorFiltro.Trim() != "")
        {
            if (filtro == "id" && int.TryParse(valorFiltro, out int PrestamosId))
            {
                ListaPrestamos = prestamosServices.Listar(a => a.PrestamosId == PrestamosId);
            }
            else if (filtro == "deudor")
            {
                ListaPrestamos = prestamosServices.Listar(a => a.Deudor == valorFiltro);
            }
            else if (filtro == "concepto")
            {
                ListaPrestamos = prestamosServices.Listar(a => a.Concepto == valorFiltro);
            }
            else if (filtro == "monto" && decimal.TryParse(valorFiltro, out decimal monto))
            {
                ListaPrestamos = prestamosServices.Listar(a => a.Monto == monto);
            }
            
        }
        else
        {
            ListaPrestamos = prestamosServices.Listar(a => true);
        }
    }
}
